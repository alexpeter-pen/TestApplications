@model IEnumerable<B18_Matura.Models.Prognoza>

@{
    ViewBag.Title = "Maksimalne temperature";
}

<h3>@ViewBag.Title</h3>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Šifra")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NazivMesta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxTemperatura)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Mesto)
        </td>
        <td>
            @Html.ActionLink(item.NazivMesta, "Prognoza", new { item.NazivMesta })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaxTemperatura)
        </td>
    </tr>
}

</table>
