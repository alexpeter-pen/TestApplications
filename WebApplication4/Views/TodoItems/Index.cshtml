@model IEnumerable<WebApplication2.Models.TodoItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PlanItem.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlanItem.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                @Html.CheckBox(item.Id.ToString(), false)
            </td>
        </tr>
    }

</table>

<input type="button" class="Delete"
       value="Delete selected" />


@section scripts
{

    <script type="text/javascript">
        $("body").on("click", ".Delete", function () {

            if ($('input:checkbox:checked').length == 0) return;

            if (confirm("Do you want to delete selected rows?")) {
                $('input[type=checkbox]').each(function () {
                    var trCurrent = $(this).parents("tr");
                    if (this.checked) {
                        $.ajax({
                            type: "DELETE",
                            url: "/api/TodoItems1/" + this.name,
                            success: function (response) {
                                trCurrent.hide();
                            }
                        });
                    }
                });
            }
        });
    </script>

}